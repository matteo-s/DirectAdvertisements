<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_gravity="center_horizontal">

        <Switch
            android:id="@+id/switch_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:checked="false"
            android:text="Main Service" />

        <Switch
            android:id="@+id/switch_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WiFi - BLE" />

        <Switch
            android:id="@+id/switch_simulator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Simulator" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_id"
            android:layout_gravity="right|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device ID"
            android:id="@+id/label_id"
            android:layout_gravity="left|top"
            android:gravity="center_vertical" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="276dp">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/debug_container"
        style="@style/CardView.Dark"
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <TextView
            android:id="@+id/debug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="device name" />

        <TextView
            android:id="@+id/debug_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="device address" />

        <TextView
            android:id="@+id/debug_clock"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:text="-" />

        <Button
            android:id="@+id/button_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="broadcast" />

    </FrameLayout>

